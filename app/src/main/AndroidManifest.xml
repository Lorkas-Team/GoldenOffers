<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lord.goldenoffers">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".business.BusinessActivity" />
        <activity android:name=".user.UserActivity" />
        <activity android:name=".business.LoginActivity" />
        <activity android:name=".business.RegisterActivity" />
        <activity android:name=".user.LoginActivity" />
        <activity android:name=".user.RegisterActivity" />
        <activity android:name=".user.HomepageActivity" />
        <activity android:name=".user.AddWishActivity" />
        <activity android:name=".user.ViewWishActivity" />
        <activity android:name=".user.SearchActivity"></activity>
    </application>

</manifest>